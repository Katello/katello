- if content_for?(:title)
  .head
    %h2
      = yield :title
    = yield :remove_item  

- if content_for?(:navigation)
  %nav.subnav.clear
    = yield :navigation

- if content_for?(:content)
  %a.close{:href => "#", "data-close"=>"panel"} #{_("Close")}
  #panel_main.scroll-pane
    = yield :content

- if content_for?(:subcontent)
  %a.close{:href => "#", "data-close"=>"subpanel"} #{_("Close")}
  #subpanel_main.scroll-pane
    = yield :subcontent

= yield :footer

= yield

= include_javascripts :scroll_pane
= yield :javascripts