#switcherContainer
  %a#switcherButton{:href => "#"}
    %div #{current_organization.name}
    .arrowIcon
  %div{:style => "clear:both"}
  #switcherBox
    #switcherForm
      #orgbox.scroll-pane
        - for org in user.allowed_organizations
          - if org.name == current_organization.name
            = link_to current_organization.name, set_org_user_session_path(:org_id=>org.id), :method=>"POST", :class=>"selected fl clear"
          - else
            = link_to org.name, set_org_user_session_path(:org_id=>org.id), :method=>"POST", :class=>"fl clear"
