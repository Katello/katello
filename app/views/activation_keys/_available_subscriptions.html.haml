= javascript :filtertable, :activation_key_subscriptions

= content_for :title do
  #{_("Activation Key")}

= content_for :remove_item do
  %a.remove_item.remove_key{"data-id"=>@activation_key.id ,"data-url"=>activation_key_path(@activation_key.id), "data-confirm-text"=>_('Are you sure?')}
    = _("Remove Activation Key")

= content_for :navigation do
  = render_navigation(:expand_all => true, :level => 3)

= content_for :content do
  #subscriptions
    .grid_10
      .fl
        - for env in @activation_key.environment.full_path
          - if env != @activation_key.environment
            #{env.name} >
          - else
            %strong #{env.name}
            - break
      .fr
        = render :partial => "common/filter_table"

    .grid_10.lower_content.clear
      = form_tag add_subscriptions_activation_key_path(@activation_key), :id=>"subscription_form", :method=>"post", :remote=>true do

        = render :partial => "subscriptions", :locals => {:subs => available_subs}

        - if editable && available_subs.length > 0
          .actions
            = submit_tag _('Add to Key'), :class => 'submit dialogbutton', :id=>"subscription_submit_button"
            %a{:class=>'dialogbutton button disabled', :id=>"fake_subscription_submit_button"} #{_('Add to Key')}