= content_for :title do
  #{_("New Activation Key")}

= content_for :navigation do
  / pretty

= content_for :content do
  .grid_10#new_key
    = form_tag activation_keys_path, :method => "post", :id => "new_activation_key" do
      %fieldset
        .grid_2.ra
          %label #{_("Name")}:
        .grid_5.la
          = text_field_tag 'activation_key[name]', params[:name], :size => "25", :tabindex => auto_tab_index

      %fieldset
        .grid_2.ra
          %label #{_("Description")}:
        .grid_5.la
          = text_area_tag 'activation_key[description]', params[:description], :size => "32x4", :tabindex => auto_tab_index

      .promotion_paths
        = hidden_field_tag 'activation_key[environment_id]'
        .grid_2.ra
          %label #{_("Environment")}:
        .grid_7.la
          = environment_selector(:path_widget_class=>"grid_7", :path_entries_class=>"grid_7", :locker_clickable=>false,
            :accessible_envs=>accessible_envs, :url_templates_proc=>url_templates_proc)

        .clear
          &nbsp;

      %fieldset#system_templates
        .grid_2.ra
          %label #{_("System Template")}:
        .grid_4.la
          = select_tag 'activation_key[system_template_id]', options_for_select(@system_template_labels, @selected_template)

      .grid_6.ra
        = button_to _("Save"), {:action => "create", :controller => "activation_keys"}, :method => :post, :id => :activation_key_save, :tabindex => auto_tab_index

