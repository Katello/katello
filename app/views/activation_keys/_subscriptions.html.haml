= javascript :activation_key_subscriptions

= content_for :title do
  #{_("Edit Activation Key")}

= content_for :remove_item do
  %a.remove_item.remove_key{"data-id"=>@activation_key.id ,"data-url"=>activation_key_path(@activation_key.id), "data-confirm-text"=>_('Are you sure?')}
    = _("Remove Activation Key")

= content_for :navigation do
  = render_navigation(:expand_all => true, :level => 3)

= content_for :content do
  %h5.grid_8 #{_("Subscriptions")}  
  = form_tag  update_subscriptions_activation_key_path, :method => "post", :id => "update_subscriptions" do |f|
    .grid_7
      = select_tag "activation_key[consumed_sub_ids]", options_from_collection_for_select(all_subs, 'sub', 'name', consumed), :multiple => true, :class => 'multiselect', :style=>"width:400px; height:200px"
    .grid_2
      = button_to _("Save Subscriptions"), {:action => "update_subscriptions", :controller => "activation_keys"}, :method => :post, :id => :subcription_save

