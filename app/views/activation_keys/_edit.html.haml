= include_javascripts :edit_helpers

%input#panel_element_id{:name => @activation_key.id, :type => "hidden", :value => @activation_key.id, "data-ajax_url"=>activation_key_path(@activation_key.id)}

.grid_8
  %h2 #{_("Edit Activation Key")}
  .grid_8
    %nav.subnav
      = render_navigation(:expand_all => true, :level => 3)

  = form_for @activation_key, :url => {:action => "update",  :controller => "activation_keys"}, :method => "put", :remote => true do |f|

    %fieldset.clearfix
      .grid_2.ra
        %label #{_("Name")}:
      .grid_5.la.editable.edit_panel_element{'name' => 'activation_key[name]', 'data-url' => activation_key_path(@activation_key.id)} #{@activation_key[:name]}

    %fieldset.clearfix
      .grid_2.ra
        %label #{_("Description")}:
      .grid_5.la.editable.edit_textarea{:style => "word-wrap: break-word;", 'name' => 'activation_key[description]', 'data-url' => activation_key_path(@activation_key.id)}<> #{@activation_key[:description]}

%a.remove_item.remove_key{"data-id"=>@activation_key.id ,"data-url"=>activation_key_path(@activation_key.id), "data-confirm-text"=>_('Are you sure?')}
  = _("Remove Activation Key")
