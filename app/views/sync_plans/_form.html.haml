-# parameters: form
- raise ArgumentError, "Sync Plan form requires :form be passed in :locals" unless local_assigns[:form]

%fieldset
  %label.fl.ra.sp #{_("Name")}:
  .grid_5.la
    = form.text_field :name

%fieldset
  %label.fl.ra.sp #{_("Description")}:
  .grid_5.la
    = form.text_field :description

%fieldset
  %label.fl.ra.sp #{_("Interval")}:
  .grid_5.la
    = select_tag('sync_plan[interval]', options_for_select(SyncPlan::TYPES, @plan.interval))

%fieldset
  %label.fl.ra.sp #{_("Start Date")}:
  .grid_5.la
    = form.text_field :plan_date, :id => 'datepicker'

%fieldset
  %label.fl.ra.sp #{_("Time")}:
  .grid_5.la
    = form.text_field :plan_time, :id => 'timepicker'


.grid_3.la.prefix_2
  = button_to _("Save"), {:action => "create", :controller => "sync_plans"}, :method => :post, :id => :plan_save