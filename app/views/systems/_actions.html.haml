= javascript do
  :javascript
    localize({
      "validation_error_pkg_name_format" : '#{escape_javascript(_('One or more package names are invalid.'))}',
      "validation_error_pkg_list_empty" : '#{escape_javascript(_('At least one package name must be provided.'))}',
      "validation_error_pkg_group_list_empty" : '#{escape_javascript(_('At least one package group name must be provided.'))}',
      "validation_error_errata_list_empty" : '#{escape_javascript(_('At least one erratum ID must be provided.'))}',
      "validation_error_select_action" : '#{escape_javascript(_('Please select the desired action.'))}'
      });

%h4
  #{_('List Actions')}:

.panel_action{:class=>"disabled", 'data-id'=>"remove_systems", 'data-url'=>bulk_destroy_systems_path(), 'data-method'=>"DELETE"}
  .delete_icon.fl
  %a.request_action
    #{_("Remove System(s)")}
  .options
    %div
      #{_("Are you sure you want to delete the %{u} selected system(s)?" % {:u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_package_action", 'data-method'=>"POST"}
  .delete_icon.fl
  %label
    #{_("Package(s):")}
  = radio_button_tag :package_action, :install_packages, false, {:class => 'radio_option', 'data-url'=>bulk_package_install_systems_path()}
  = label_tag _('Install')
  = radio_button_tag :package_action, :update_packages, false, {:class => 'radio_option', 'data-url'=>bulk_package_update_systems_path()}
  = label_tag _('Update')
  = radio_button_tag :package_action, :remove_packages, false, {:class => 'radio_option', 'data-url'=>bulk_package_remove_systems_path()}
  = label_tag _('Remove')
  %div
    - help_text = _("Enter Package(s)...")
    %input{:type=>'text', :id=>'packages_input', :size=>'30', :placeholder => help_text, :title => help_text}
    %input.request_action.button{:type=>'button', :value=>_('Run')}
  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to %{a} the packages entered on the %{u} selected system(s)?" % {:a => "<span class='action_text'></span>", :u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_package_group_action", 'data-method'=>"POST"}
  .delete_icon.fl
  %label
    #{_("Package Group(s):")}
  = radio_button_tag :package_group_action, :install_package_groups, false, {:class => 'radio_option', 'data-url'=>bulk_package_group_install_systems_path()}
  = label_tag _('Install')
  = radio_button_tag :package_group_action, :remove_package_groups, false, {:class => 'radio_option', 'data-url'=>bulk_package_group_remove_systems_path()}
  = label_tag _('Remove')
  %div
    - help_text = _("Enter Package Group(s)...")
    %input{:type=>'text', :id=>'package_groups_input', :size=>'30', :placeholder => help_text, :title => help_text}
    %input.request_action.button{:type=>'button', :value=>_('Run')}
  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to %{a} the package groups entered on the %{u} selected system(s)?" % {:a => "<span class='action_text'></span>", :u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_errata_action", 'data-url'=>bulk_errata_install_systems_path(), 'data-method'=>"POST"}
  .delete_icon.fl
  %label
    #{_("Install Errata")}
  %div
    - help_text = _("Enter Errata...")
    %input{:type=>'text', :id=>'errata_input', :size=>'30', :placeholder => help_text, :title => help_text}
    %input.request_action.button{:type=>'button', :value=>_('Run')}
  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to install the errata entered on the %{u} selected system(s)?" % {:u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{'data-id'=>"select_none"}
  #select-result
  %a#select-none #{_("Select None")}