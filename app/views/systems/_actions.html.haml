= javascript do
  :javascript
    localize({
      "validation_error_pkg_name_format" : '#{escape_javascript(_('One or more package names are invalid.'))}',
      "validation_error_pkg_list_empty" : '#{escape_javascript(_('At least one name must be provided.'))}',
      "validation_error_pkg_group_list_empty" : '#{escape_javascript(_('At least one package group name must be provided.'))}',
      "validation_error_errata_list_empty" : '#{escape_javascript(_('At least one erratum ID must be provided.'))}',
      "validation_error_select_content_type" : '#{escape_javascript(_('Please select Package(s) or Package Group(s).'))}',
      "validation_error_system_group_name_empty" : '#{escape_javascript(_('A system group name must be provided.'))}'
      });

%h4
  #{_('List Actions')}:

.panel_action{:class=>"disabled", 'data-id'=>"remove_systems", 'data-url'=>bulk_destroy_systems_path(), 'data-method'=>"DELETE"}
  .delete_icon.fl
  %a.request_action
    #{_("Remove System(s)")}
  .options
    %div
      #{_("Are you sure you want to delete the %{u} selected system(s)?" % {:u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_package_action"}
  .package_icon.fl
  = radio_button_tag :systems_action, :packages, false
  = label_tag _('Package(s)')
  = radio_button_tag :systems_action, :package_groups, false
  = label_tag _('Package Group(s)')
  %div
    - help_text = _("Enter Package or Group Name(s)...")
    %input{:type=>'text', :id=>'packages_input', :size=>'25', :placeholder => help_text, :title => help_text}
    %input.request_action.package.button{:type=>'button', :value=>_('Install'), 'data-method'=>"POST", 'data-url'=>bulk_content_install_systems_path()}
    %input.request_action.package.button{:type=>'button', :value=>_('Update'), 'data-method'=>"POST", 'data-url'=>bulk_content_update_systems_path()}
    %input.request_action.package.button{:type=>'button', :value=>_('Remove'), 'data-method'=>"POST", 'data-url'=>bulk_content_remove_systems_path()}

  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to %{a} the %{c} entered on the %{u} selected system(s)?" % {:a => "<span class='action_text'></span>", :c => "<span class='content_type_text'></span>", :u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_errata_action", 'data-url'=>bulk_errata_install_systems_path(), 'data-method'=>"POST"}
  .erratum_icon.fl
  %label
    #{_("Errata")}
  %div
    - help_text = _("Enter Errata...")
    %input{:type=>'text', :id=>'errata_input', :size=>'25', :placeholder => help_text, :title => help_text}
    %input.request_action.button{:type=>'button', :value=>_('Install')}
  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to install the errata entered on the %{u} selected system(s)?" % {:u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{:class=>"disabled", 'data-id'=>"systems_system_groups_action"}
  .system_group_icon.fl
  %label
    #{_("System Groups")}
  %div
    - help_text = _("Add Name or Select by Name...")
    %input{:type=>'text', :id=>'system_group_input', :size=>'25', :placeholder => help_text, :title => help_text}
    %input#add_system_group.request_action.system_group.button{:type=>'button', :value=>_('Add'), 'data-method'=>"POST", 'data-url'=>bulk_add_system_group_systems_path()}
    %input.request_action.system_group.button{:type=>'button', :value=>_('Remove'), 'data-method'=>"POST", 'data-url'=>bulk_remove_system_group_systems_path()}
  %div.validation_error
  .options
    %div
      #{_("Are you sure you want to %{a} the system group entered on the %{u} selected system(s)?" % {:a => "<span class='action_text'></span>", :u => "<span class='numitems'></span>"})}
    .actions
      %input.cancel.button{:type=>"button", :value=>_('No')}
      %input.trigger.button{:type=>"button", :value=>_('Yes') }
    %br.clearfloat

.panel_action{'data-id'=>"select_none"}
  #select-result
  %a#select-none #{_("Select None")}