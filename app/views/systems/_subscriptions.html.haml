    -#   .subs_num
    -#     = image_tag("icons/check_icon.png")
    -#     #{sockets}
    -# .subs_right.ca
    -#   #{_("Guests Requirement")}
    -#   %br
    -#   .subs_num #{"--"}
  #subs_data
    = render :partial=>"subs", :locals=>{:system=>@system, :avail_subs => avail_subs, :consumed_entitlements => consumed_entitlements, :editable=>editable}
  %br.clear
