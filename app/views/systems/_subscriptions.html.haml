= render :partial => "system_tupane_header_nav"

= content_for :content do
  .grid_8.subs
    .subs_top
      .subs_icon{:class => "#{@system.compliance_color}"}
      .fl
        = image_tag("boxshadow.png")
      .subs_text.fl
        - if @system.compliant?
          - until_time = @system.compliant_until
          = until_time ? _("Subscriptions are Current Until %s") % I18n.l(until_time) : _("Subscriptions are Current")
        - else
          = _("Subscriptions are not Current")
