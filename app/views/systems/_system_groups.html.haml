= javascript do
  :javascript
    localize({
      "system_group_search_input" : '#{escape_javascript(_('Type or select existing System Groups.'))}'
      });

= render :partial => "system_tupane_header_nav"

= content_for :content do
  #system_groups
    %table
      %thead
        %tr.no_sort
          %th
            #{_("Name")}

      -if editable
        %tr#add_groups.no_sort
          %td
            %form{:id=>'add_group_form'}
              %input{:type=>'text', :id=>'system_group_pane_input', :size=>'35', 'data-url'=>add_system_groups_system_path(@system)}
              %input.button{:type=>'submit', :id=>'add_groups', :value=>_('Add')}

        %tr#empty_row{:class=>(:hidden if !@system_groups.empty?)}
          %td
            = _("This system is not currently associated with a System Group.")
        = render :partial=>'system_group_items', :locals=>{:system_groups=>@system_groups}

    - if @system.editable?
      %input.fr.button{:type=>"button", :id=>"remove_groups", :value=>_("Remove"), 'data-url'=> remove_system_groups_system_path(@system)}
