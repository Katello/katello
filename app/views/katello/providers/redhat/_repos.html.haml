%table.repo_table{:style=>'display: none;'}
  %thead
    %th.skinny_column
      = _('Enabled?')
    %th
      = _('Repository')
  %tbody
    - for repo in product_content.repositories
      %tr.repo{:id=>"repo_#{repo.id}"}
        %td
          %label
            =image_tag( "katello/icons/spinner.gif", :class=>"hidden fl", :id=>"spinner_#{repo.id}", :style=>"margin-right:1px;")
            %input.repo_enable{:id=>"input_repo_#{repo.id}", :type=>:checkbox, :value=>repo.label, "data-url" => "/katello/api/v2/repositories/#{repo.label}", "data-product-id" => repo.product.label, "data-organization-id" => repo.product.organization.label,
                  :disabled =>(repo.promoted? || !@provider.editable?), :checked=>(:checked if repo.enabled?)}
        %td
          #{repo.name}
