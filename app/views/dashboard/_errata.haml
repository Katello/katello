

#dashboard_errata.big_widget
  .list
    .block_head.clear
      .column_head.col_1
        #{_("Type")}
      .column_head.col_2
        #{_("Errata")}
      .column_head.col_3
        #{_('Product')}
    .scroll-pane
      -for errata in errata_summary()
        .errata
          %div.errata_item
            .col_1
              %div{:class=>errata_type_class(errata)}
              %div.collapsed
            .col_2.one-line-ellipsis
              #{errata.e_id} (#{errata.systems.length} #{_('Systems')})
            .col_3.one-line-ellipsis
              #{errata.product}
          %div.system_list{:style=>"display:none;"}
            .subheader
              .col_1
                &nbsp;
              .subcol_2
                #{_("System")}
              .subcol_3
                #{_("Environment")}
            - for sys in errata.systems
              .system
                .col_1
                  &nbsp;
                .subcol_2
                  %a
                    =sys
                .subcol_3
                  %a
                    Production


