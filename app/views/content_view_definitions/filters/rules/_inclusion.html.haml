= kt_form_for(rule,
  :url => content_view_definition_filter_rule_path(view_definition.id, filter.id, rule.id),
  :html => {:id => "update_form"}) do |form|

  = radio_button_tag("filter_rule[inclusion]", true, rule.inclusion ? true : false,
                     {:class => :inclusion, :tabindex => auto_tab_index})
  = label_tag(_('Specify Included %{type}') % {:type => rule_type})

  = radio_button_tag("filter_rule[inclusion]", false, rule.inclusion ? false : true,
                     {:class => :inclusion, :tabindex => auto_tab_index})
  = label_tag(_('Specify Excluded %{type}') % {:type => rule_type})
