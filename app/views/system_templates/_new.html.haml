= content_for :title do
  #{_("New System Template")}

= content_for :navigation do
  / pretty

= content_for :content do
  = form_for SystemTemplate.new, :html => {:method => :post, :id => 'new_system_template'}, :url => system_templates_path do |form|
    %fieldset.fl.clear
      %label.grid_2 #{_("Name")}:
      .grid_4.la#template_name
        = form.text_field :name

    %fieldset.fl.clear
      %label.grid_2 #{_("Description")}:
      .grid_4.la#template_description
        = form.text_area :description, :cols=>30, :rows=>5


    .grid_3.la.prefix_2
      = button_to _("Save"), {:action => "create", :controller => "system_templates"}, :method => :post, :id => :template_save