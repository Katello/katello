

%ul.expand_list
  -if products.empty?
    #{_("No products")}
  -for product in products
    %li.clear.slide_link
      -# bz 796239
      -#%a.product_add_remove.st_button.fr{ "data-id" => product.id, "data-name"=>product.name}
      -#  = "+ #{_("Add")}"
      .link_details.simple_link{:id=>product_bc_id(product)}
