= javascript :gpg_key_edit

= content_for :title do
  #{@gpg_key.name}

= content_for :remove_item do
  - if editable
    = link_to _("Remove GPG Key"), gpg_key_path(@gpg_key.id), :confirm => _('Are you sure?'), :method => :delete, :class=>"remove_item", :remote=>true

= content_for :content do
  = help_tip_button('gpg_keys_edit-help')

  %input#panel_element_id{:name => @gpg_key.id, :type => "hidden", :value => "#{name}_#{@gpg_key.id}", "data-ajax_url"=>gpg_key_path(@gpg_key.id)}

  %div
    .grid_10
      = help_tip(_("Edit GPG Key enables you to modify the selected GPG Key.  A new key can be copied and pasted in or uploaded directly."), 'gpg_keys_edit-help') |

    .grid_10
      -#= form_tag gpg_key_path(@gpg_key), :method => :put, :remote=>true, :id => "new_gpg_key" do
      %fieldset
        .grid_1.ra
          %label #{_("Name")}:
        .grid_8.la
          .grid_8.la#gpg_key_name{'name' => 'gpg_key[name]', :class => ("editable edit_panel_element" if editable), 'data-url' => gpg_key_path(@gpg_key.id)} #{@gpg_key[:name]}
      %fieldset
        .grid_1.ra
          %label #{_("Key")}:
        .grid_8.la
          .grid_8.la#gpg_key_content{'name' => 'gpg_key[content]', :class => ("editable edit_textarea" if editable), 'data-url' => gpg_key_path(@gpg_key.id)} #{@gpg_key[:content]}
