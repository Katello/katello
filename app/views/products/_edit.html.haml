= javascript :edit_helpers

= content_for :title do
  = _("Provider: ") + @provider.name

= content_for :remove_item do
  - if editable
    = link_to _("Remove Product"), {:controller=>"products", :action=>"destroy"}, :confirm => _('Are you sure you want to remove this product?'), :method => :delete, :class=>"remove_item", :remote=>true

= content_for :subcontent do
  %h3
    = _("Edit Product")
  
  %fieldset
    .grid_2.ra
      %label #{_("Name")}:
    .grid_5.la#product_name{'name' => 'product[name]', 'data-url' => provider_product_path(@provider.id), :class=>("editable edit_providername" if editable)} #{@product.name}
  
  %fieldset
    .grid_2.ra
      %label #{_("Description")}:
    .grid_5.la{:style => "word-wrap: break-word;", 'name' => 'product[description]', :class=>("editable edit_textarea" if editable), 'data-url' => provider_product_path(@provider.id)}<> #{@product.description}
  
