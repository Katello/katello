= javascript do
  :javascript
    //what button should be disabled when passwords don't match

    localize({
      "password_match": '#{_('The passwords do not match')}',
      "very_weak": '#{_("Very Weak")}',
      "weak": '#{_("Weak")}',
      "good": '#{_("Good")}',
      "strong": '#{_("Strong")}',
      "meterText": '#{_("Password Strength")}',
      "usernameMatch": '#{_("The password should not contain the username.")}'
    });

.modalbox
  %h2 #{_('Change Password')}

  %fieldset.fl.clear
    .grid_3.ra
      = label :user, :password, _("Password:")
    .grid_5.la
      = text_field :user, :password, :id=>"password_field", :value=>"", :type=>"password"
  .grid_5.la.prefix_3
    #password_meter

  %fieldset.fl.clear
    .grid_3.ra
      = label :user, :username, _("Confirm Password:")
    .grid_5.la
      = text_field :user, :username, :id=>"confirm_field", :value=>"", :type=>"password"

  .grid_5.la.prefix_3
    #save_password.verify_password.button{'data-url'=>password_reset_path(@user.password_reset_token)}
      #{_("Save")}
  .grid_5.la.prefix_3
    #password_conflict

= javascript :password