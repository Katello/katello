= content_for :title do
  = type

= content_for :subcontent do
  %h4
    = format_time(task.updated_at)

  %fieldset
    .grid_7
      %h5 #{_("Summary")}
    .grid_7.multiline
      = user_message

  %fieldset
    .grid_7
      %h5 #{_("Details")}
    .grid_7.la
      = status_message(task)

  %fieldset
    .grid_7
      %h5 #{_("Parameters")}
    .grid_7.la
      = system_task.humanize_parameters

  %fieldset
    .grid_7
      %h5 #{_("Result")}
    .grid_7.multiline
      = system_task.result_description
  
