-tasks.each do |t|
  - cssclass = cycle("alt", "")

  %tr{:class => cssclass + ' task'}
    %td.event_name{"data-pending-task-id" => (t.id if t.pending?)}
      %a.event_status.subpanel_element{"data-url"=>system_event_path(system.id, t.id)}
        - if t.pending?
          = image_tag("spinner.gif")
        = status_message(t)
    %td.event_date
      = format_time(t.created_at)

