= content_for(:title) do
  = project_name + "-" + default_title

= content_for(:stylesheets_block) do
  = stylesheet_link_tag "stylesheets/bastion"
  = yield :stylesheets

= content_for(:body) do
  = render :file => "common/menu"
  %article.maincontent
    = yield

= content_for(:javascripts_block) do
  = javascript_include_tag "common/vendor"
  %script{ :type => "text/javascript" }
    :plain
      $.bbq = undefined;
  = javascript_include_tag :common
  %script{ :type => "text/javascript" }
    -if protect_against_forgery?
      :plain
        var AUTH_TOKEN = #{form_authenticity_token.inspect};
    = render :partial => "common/common_i18n"
    = render :partial => 'common/config_experimental'
    = render :partial => 'common/ajax_notices'
    = render :partial => 'common/notification'
    = yield :inline_javascript
  = javascript_include_tag 'common/experimental'

  = yield :javascripts

= render :file => "bastion/layouts/base", :locals => { :ng_app_name=>"Katello" }
