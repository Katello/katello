- collection.each do |pack|
  %li.no_slide.block{:id => pack.id, "data-ajax_url" => package_path(pack.id)}
    - if @promotable_packages.include?(pack.id)
      %a{:class => "fr content_add_remove remove_package st_button", "data-display_name"=> pack.nvrea, "data-id" => pack.id, "data-type" => "package", "data-product_id"=> [@product.id].to_json, :id => "add_remove_package_#{pack.id}"}
    - elsif !@not_promotable.include?(pack.id)
      .fr.promoted
        = _("Promoted")
    .simple_link
      %span
        = pack.nvrea
