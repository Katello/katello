%ul.expand_list
  -if system_templates.empty?
    #{_("No Templates")}

  - system_templates.each do |system_template|

    %li.no_slide.block{:id => system_template.id, "data-ajax_url" => promotion_details_system_template_path(system_template.id)}
      .fr
        %span.added.tipsify.hidden #{_("Added")}
        %a{:class => "fr content_add_remove remove_template st_button hidden", "data-id" => system_template.id,
           "data-template_id" => system_template.id, "data-type"=>"template",
           "data-display_name"=>system_template.name, :id => "add_remove_template_#{system_template.id}" }

      .simple_link
        %span
          = system_template.name
