= content_for :title do
  #{_("New Changeset")}

= content_for :content do
  .grid_7#new_changeset123
    = form_tag changesets_path, :method => "post", :id => "new_changeset" do
      %input{:type => "hidden", :name => "env_id", :value => @environment.id}
      %input{:type => "hidden", :name => "next_env_id", :value => @next_environment.id}
      %fieldset
        .grid_2.ra
          %label #{_("Name")}:
        .grid_4.la
          = text_field_tag :name, params[:name], :tabindex => auto_tab_index
      %fieldset
        .grid_2.ra
          %label #{_("Description")}:
        .grid_4.la
          = text_area_tag :description, nil, :tabindex => auto_tab_index
      %fieldset
        .grid_2.ra
          %label #{_("Type")}:
        .grid_4.la
          -# if the user is currently in the Library, only changesets of type 'promotion' are allowed
          - if @environment.library
            #{@changeset.action_type}
          - else
            = select_tag :action_type, options_for_select(Changeset::TYPES, @changeset.action_type), :tabindex => auto_tab_index, :style => "padding-right:5px;"
      .grid_5.ra
        .button#save_changeset_button{'data-url' => changesets_path, :tabindex => auto_tab_index}
          #{_("Save Changeset")}