= render :partial => "foreman/configuration_templates/edit_header"

= content_for :content do
  .grid_10
    = render :partial => "combinations", :locals => {:environments => environments}

    = form_for @configuration_template, :as=>"configuration_template", :url=> "", :html=>{:method => :post, "data-url" => configuration_template_template_combinations_path(@configuration_template), :id=>"add_association_config_template" } do |form|
      %fieldset
        .grid_2.ra
          %label #{_("Available Environments:")}:
        .grid_5.la
          = collection_select :template_combination, :environment_id, environments, :foreman_id, :name, :include_blank => true

      = form.submit _("Add Environment")

= render :template => "layouts/tupane_layout"
